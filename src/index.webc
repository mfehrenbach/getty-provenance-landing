<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta content="initial-scale=1, width=device-width, viewport-fit=cover" name="viewport">
		<title @text="title"></title>
		<link webc:import="assets/styles.webc">
		<script src="assets/script.js"></script>
		<script webc:keep @raw="getBundle('js')" type="module"></script>
	</head>
	<body>
		<!-- TODO Skip link! -->
		<nav aria-label="Breadcrumb">
			<ol>
				<li>
					<a :aria-label="breadcrumb.title" :href="breadcrumb.url">
						<p @text="breadcrumb.title"><!--- TODO Replace with SVG! ---></p>
					</a>
				</li>
				<li webc:for="crumb of breadcrumb.crumbs">
					<a :href="breadcrumb.url + crumb.url">
						<p @text="crumb.title"></p>
					</a>
				</li>
			</ol>
		</nav>
		<header>
			<h1 @text="title"></h1>
			<nav aria-label="Navigation">
				<ul>
					<li webc:for="link of navigation">
						<a :href="breadcrumb.url + link.url">
							<p @text="link.title"></p>
						</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<form :data-base-url="baseUrl" :data-api-url="apiUrl">
				<fieldset>
					<label @html="search.label" for="search"></label>
					<input
						autocapitalize="off"
						autocomplete="off"
						autocorrect="off"
						id="search"
						name="search"
						required
						spellcheck="false"
						type="text"
					>
				</fieldset>
				<fieldset>
					<select name="type" id="type">
						<option webc:for="type of search.types" @text="type.title" :value="type.value"></option>
					</select>
				</fieldset>
				<button @text="search.button" type="submit"></button>
			</form>
			<ul>
				<li webc:for="example of record.examples">
					<a :href="baseUrl + '/report/' + example.report">
						<p>
							<span @text="record.intro"></span>
							<em @text="example.name"></em>
						</p>
					</a>
					<figure>
						<img :src="record.imagePrefix + example.image + record.imageSuffix">
						<figcaption>
							<a :href="record.objectPrefix + example.object + '?canvas=' + example.media" @html="example.credit"></a>
						</figcaption>
					</figure>
				</li>
			</ul>
		</main>
		<footer>
			<h2 @text="footer.title"></h2>
			<ul>
				<li>
					<p @text="footer.copyright"></p>
				</li>
				<li webc:for="link of footer.legal">
					<a :href="breadcrumb.url + link.url">
						<p @text="link.title"></p>
					</a>
				</li>
			</ul>
		</footer>
	</body>
</html>
